@model TicketModel
@{
    var projectId = ViewData["projectId"];
}
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="create-ticket-form">
   <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h5>Create A Ticket</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        

          <form id="createTicketForm" method="post" asp-controller="Project" asp-action="CreateTicket">
              <div class="form-group">
                    <label asp-for="ProjectId">Project ID</label>
                    
                    <input asp-for="ProjectId" value="@projectId" readonly/>
              </div>
              <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title">
                <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
              </div>
              <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter description"></textarea>
              </div>
              <div class="form-group">
                <label asp-for="TicketType" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="TicketType" asp-items="Html.GetEnumSelectList<TicketType>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="TicketType" class="text-danger" />
                </div>
              </div>
              <div class="form-group">
                <label asp-for="Priority" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Priority" asp-items="Html.GetEnumSelectList<TicketPriority>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger" />
                </div>
              </div>
              

          </form>





      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" form="createTicketForm" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>