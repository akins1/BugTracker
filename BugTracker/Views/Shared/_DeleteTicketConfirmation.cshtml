@{
    //
}
@model TicketModel
<div class="modal fade" id="delete-ticket-confirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true" style="top: 30%">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Ticket</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        Are you sure you want to delete this ticket?
                    </div>
                    <div>
                        (This action is permanent)
                    </div>



                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>


                    
                    @using (Html.BeginForm("DeleteTicket", "Project", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.TicketId)
                        @Html.HiddenFor(model => model.ProjectId)

                        <button type="submit" class="btn btn-danger" value="Delete">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>